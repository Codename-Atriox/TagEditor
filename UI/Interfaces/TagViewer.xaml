<UserControl x:Class="TagEditor.UI.Windows.TagViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagEditor.UI.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="TagsTabs" Grid.Column="1" Background="#FF1A1A1A" BorderBrush="#FF3D3D3D" Margin="0,5,0,0">
            <TabItem Header="test tab"/>
        </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Margin="0,-1,0,0">
            <ComboBox  Width="60" SelectedIndex="0" BorderBrush="#FF2E2E2E" Foreground="#FFD6D6D6">
                <ComboBoxItem Content="100%"/>
            </ComboBox>
            <Button Content="RL" Width="20" />
            <Button Content="CL" Width="20" />
            <ToggleButton Content="AD" Width="20" />
            <ToggleButton Content="A2" Width="20" />

        </StackPanel>
    </Grid>
</UserControl>
